'.text.xml.pretext':
# The following contains snippets coopted from "language LaTeX" and converted from the Sublime plugin "MBXTools".
# Paragraphs
  'Paragraph':
    prefix: 'p'
    body: """
    <p>
      $1
    <\/p>
    """

#Math mode
  'mathmode':
    prefix: 'm'
    body: '<m>$1<\/m>$0'
  'mathequation':
    prefix: 'me'
    body: '<me>\n\t$1\n<\/me>\n$0'
  'mathdisplay':
    prefix: 'md'
    body: '''
    <md>
      <mrow>$1 \\\\amp $2</mrow>
      <mrow>$3 \\\\amp $4</mrow>$0
    </md>
    '''
  'mrow':
    prefix: 'mrow'
    body: '<mrow> $1 \\\\amp $2</mrow>$0'


# figure/table
  'Figure':
    prefix: 'figure'
    body: '<figure>\n\t$1\n<\/figure>\n$2'
  'Figure -xmlid':
    prefix: 'ifig'
    body: '<figure xml:id=\"$1\">\n\t$2\n<\/figure>\n'
  'image':
    prefix: 'image'
    body:'''
    <image xml:id="$1">
      $2
    </image>
    '''
  'latex-image':
    prefix: 'latex-image'
    body: '''
    <latex-image>
      \\\\begin{tikzpicture}
        $1
      \\\\end{tikzpicture}
    </latex-image>
    '''
  'description':
    prefix: 'description'
    body: '<description>$1</description>$0'
  'caption':
    prefix: 'caption'
    body: '<caption>$1</caption>'
  'sidebyside':
    prefix: 'sidebyside'
    body: '<sidebyside width="$1">\n\t$2\n</sidebyside>'
  'Table':
    prefix: 'table'
    body: '''
    <tabular>
      <caption>$1</caption>
      <tabular>
        <row>
          <cell>$2</cell>$0
        </row>
      </tabular>
    </table>
    '''
  'tabular':
    prefix: 'tabular'
    body:'''
    <tabular$1>
      <row$2>
        <cell>$3</cell>$0
      </row>
    </tabular>
    '''
  'row':
    prefix: 'row'
    body: '<row$1>\n\t<cell>$2</cell>$0\n</row>'
  'cell':
    prefix: 'cell'
    body: '<cell>$1</cell>$0'

# index
  'index':
    prefix: 'idx'
    body: '<idx><h>$1<\/h>$2<\/idx>$0'

#notation:
  'notation':
    prefix: 'notation'
    body:'''
    <notation>
      <usage>${1:(in math mode)}</usage>
      <description>$2</description>
    </notation>
    '''

#ref
  'reference':
    prefix: 'ref'
    body: '<xref ref=\"$1\"\/>$0'

  'footnote':
    prefix: 'fn'
    body: '<fn>$1</fn>'

#Objectives
  'objectives':
    prefix: 'objectives'
    body:'<objectives>\n\t$1\n</objectives>\n'

  'title':
    prefix: 'title'
    body: '<title>$1</title>\n\n$2'
  'statement':
    prefix: 'statement'
    body: '''
    <statement>
      <p>
        $1
      </p>
    </statement>
    '''
  'solution':
    prefix: 'solution'
    body: '''
    <solution>
      <p>
        $1
      </p>
    </solution>'''
  'hint':
    prefix: 'hint'
    body: '''
    <hint>
      <p>
        $1
      </p>
    </hint>'''
  'answer':
    prefix: 'answer'
    body: '''
    <answer>
      <p>
        $1
      </p>
    </answer>'''
# general environment
  '<env>':
    prefix: '<'
    body: '<${1:env}>\n\t$2\n<\/${1:env}>'
  '<env id>':
    prefix: '<id'
    body: '<${1:env} xml:id=\"$2\">\n\t$3\n<\/${1:env}>'
  'xml:id':
    prefix: 'id'
    body: 'xml:id=\"$1\"$2'
  'inline env':
    prefix: 'i'
    body: '<$1>$2<\/$1>$0'

# text styles
  'code':
    prefix: 'c'
    body: '<c>$1<\/c>$2'
  'em':
    prefix: 'em'
    body: '<em>$1<\/em>$2'
  'quote':
    prefix: 'q'
    body: '<q>$1<\/q>$2'
  'term':
    prefix: 't'
    body: '<term>$1<\/term>$2'
  'abbreviations':
    prefix: 'abbr'
    body: '<abbr>$1</abbr>$0'
  'acronyms':
    prefix: 'acro'
    body: '<acro>$1</acro>$0'
  'initialisms':
    prefix: 'init'
    body: '<init>$1</init>$0'

  # webwork var:
  'var':
    prefix: 'var'
    body: '<var name="$1" width="$2"/>$0'
